<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/seekBar" android:max="10" android:progress="3"/>
    <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3"
            android:id="@+id/seekBar2"/>
    <Button
            android:text="증가"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button" android:onClick="btn1Method"/>
    <Button
            android:text="감소"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button2" android:onClick="btn2Method"/>
    <Button
            android:text="설정하기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button3" android:onClick="btn3Method"/>
    <Button
            android:text="값 가져오기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/Button4" android:onClick="btn4Method"/>
</LinearLayout>