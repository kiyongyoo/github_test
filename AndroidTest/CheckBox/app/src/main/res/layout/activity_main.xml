<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:background="@android:color/holo_orange_light">

    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <CheckBox
            android:text="체크박스1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:checked="true"
            android:textColorLink="@color/design_default_color_error" android:textCursorDrawable="@color/black"/>
    <CheckBox
            android:text="체크박스2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox2"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
    <CheckBox
            android:text="체크박스3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/checkBox3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:checked="true"
            android:textColorLink="@color/design_default_color_error" android:textCursorDrawable="@color/black"/>
    <Button
            android:text="체크 상태 확인하기"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button" android:onClick="btn1Method"/>
    <Button
            android:text="체크 상태 설정"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button2" android:onClick="btn2Method"/>
    <Button
            android:text="체크 상태 해제"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button3" android:onClick="btn3Method"/>
    <Button
            android:text="체크 상태 반전"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/button4" android:onClick="btn4Method"/>
</LinearLayout>